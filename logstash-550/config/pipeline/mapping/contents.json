{
  "template": "contents-*",
  "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
          "analyzer": {
              "default": {
                  "type": "standard"
              },
              "ko_analyzer": {
                  "type": "custom",
                  "tokenizer": "arirang_tokenizer",
                  "analyzer": "arirang_analyzer"
              }
          }
      }
  },
  "mappings": {
    "contents": {
      "analyzer":"ko_analyzer",
      "properties": {
        "Category_ID": { "type": "integer", "index": "no" },
        "Contents_ID": { "type": "integer", "index": "no" },
        "Contents_Title": { "type": "text", "analyzer": "ko_analyzer" },
        "Category_Value_kor": { "type": "text", "index": "not_analyzed" },
        "Contents_Keyword": { "type": "text", "analyzer": "ko_analyzer" },
        "Contents_Location": { "type": "text", "index":"not_analyzed" },
        "Contents_Rating": { "type": "double", "index": "no" },
        "Contents_View_Cnt": { "type": "integer", "index": "no" },
        "Contents_Review_Cnt": { "type": "integer","index": "no" },
        "Contents_Scrap_Cnt": { "type": "integer", "index": "no" },
        "Contents_Thumbnail": { "type": "text", "index": "no" },
        "Contents_Contents": { "type": "text", "analyzer": "ko_analyzer" },
        "Contents_City": { "type": "text", "index": "no" },
        "Contents_Country": { "type": "text", "index": "no" },
        "Contents_Tel": {"type": "text", "index": "no"},
        "Contnets_Time": {"type": "text", "index": "no"},
        "Contents_Lat": { "type": "double", "index": "no" },
        "Contents_Long": { "type": "double", "index": "no" },
        "Created": { "type": "date", "format": "yyyy-MM-dd HH:mm:ss"},
        "Updated": { "type": "date", "format": "yyyy-MM-dd HH:mm:ss"}
      }
    }
  }
}
