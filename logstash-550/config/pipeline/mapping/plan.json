{
  "template": "plan-*",
  "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
          "analyzer": {
              "default": {
                  "type": "standard"
              },
              "ko_analyzer": {
                  "type": "custom",
                  "tokenizer": "arirang_tokenizer",
                  "analyzer": "arirang_analyzer"
              }
          }
      }
  },
  "mappings": {
    "plan": {
      "properties": {
        "Plan_ID": { "type": "integer", "index": "no" },
        "Member_ID": { "type": "integer", "index": "no" },
        "Member_Name": { "type":"text", "index": "not_analyzed"},
        "Plan_Title": { "type": "text", "index":"analyzed" },
        "Plan_StartDate": { "type": "date", "format": "yyyy-MM-dd", "index": "not_analyzed"},
        "Plan_EndDate": { "type": "date", "format": "yyyy-MM-dd", "index": "not_analyzed"},
        "Plan_EndChk": { "type": "integer","index": "not_analyzed" },
        "Plan_Like_Cnt": {"type": "integer", "index":"no"},
        "Created": { "type": "date", "format": "yyyy-MM-dd HH:mm:ss"},
        "Updated": { "type": "date", "format": "yyyy-MM-dd HH:mm:ss"}
      }
    }
  }
}
